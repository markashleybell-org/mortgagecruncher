@model IndexViewModel

@using (Html.BeginForm("Index", "Home", FormMethod.Get, new { @class = "form-inline form-variables" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.StartMonth, new { @class = "sr-only" })
        @Html.DropDownListFor(m => m.StartMonth, Model.MonthOptions, new { @class = "form-control " })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.StartYear, new { @class = "sr-only" })
        @Html.DropDownListFor(m => m.StartYear, Model.YearOptions, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LoanValue, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.LoanValue, new { @class = "form-control", placeholder = "Loan Value" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.TermYears, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.TermYears, new { @class = "form-control", placeholder = "Mortgage Term" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.TermRate, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.TermRate, new { @class = "form-control", placeholder = "Loan Value" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FixedTermYears, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.FixedTermYears, new { @class = "form-control", placeholder = "Loan Value" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FixedTermRate, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.FixedTermRate, new { @class = "form-control", placeholder = "Loan Value" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ExtraPaymentInterval, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.ExtraPaymentInterval, new { @class = "form-control", placeholder = "Loan Value" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ExtraPaymentAmount, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.ExtraPaymentAmount, new { @class = "form-control", placeholder = "Loan Value" })
    </div>

    <input type="submit" class="btn btn-primary" value="Go"/>
}

<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Pmt No.</th>
            <th>Month</th>
            <th>Interest Rate/Type</th>
            <th>Payment</th>
            <th>Interest</th>
            <th>Principal</th>
            <th>Balance</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var entry in Model.ScheduleEntries)
    {
        <tr>
            <td>@entry.PaymentNumber</td>
            <td>@Model.MonthNames[entry.Month - 1] @entry.Year</td>
            <td>@entry.InterestRate% @entry.InterestType</td>
            <td>@entry.Payment.ToString("F2")</td>
            <td>@entry.Interest.ToString("F2")</td>
            <td>@entry.Principal.ToString("F2")</td>
            <td>@entry.Balance.ToString("F2")</td>
        </tr>
    }
    </tbody>
</table>